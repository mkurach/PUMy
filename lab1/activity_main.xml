<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="-16dp">

        <EditText
            android:id="@+id/kwotaRach"
            android:layout_width="421dp"
            android:layout_height="93dp"
            android:ems="10"
            android:hint="Wpisz kwotę rachunku"
            android:inputType="numberSigned" />

        <TextView
            android:id="@+id/napis"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Wybierz procent napiwku" />

        <SeekBar
            android:id="@+id/seekBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:max="30"
            android:progress="3" />

        <TextView
            android:id="@+id/procNap"
            android:layout_width="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="66dp"
            android:text="Procent napiwku" />

        <TextView
            android:id="@+id/napiwek"
            android:layout_width="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="80dp"
            android:text="Wysokość napiwku" />

        <TextView
            android:id="@+id/pelnaKwota"
            android:layout_width="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="90dp"
            android:text="Kwota do zapłaty" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>